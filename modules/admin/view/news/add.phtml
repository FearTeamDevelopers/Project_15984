<ul class="maintabmenu multipletabmenu">
    <li><a href="/admin/news/">News List</a></li>
    <li class="current"><a href="#">Add News</a></li>
</ul><!--maintabmenu-->
<div class="content">
    <div class="two_third">
        <div class="widgetbox">
            <div class="contenttitle radiusbottom0">
                <h2 class="table"><span>News content</span></h2>
            </div><!--contenttitle-->
            <form class="stdform stdform2" method="post" action="#" >
                <input type="hidden" name="tk" id="tk" value="{echo $token}" />
                <p>
                    <label>Title</label>
                    <span class="field">
                        <input class="longinput" type="text" name="title" value="{echo isset($news)? $news->title: ""}" />
                        {if isset($errors["title"])}
                        <label class="error">{echo join("<br/>", $errors["title"])}</label>
                        {/if}
                    </span>
                </p>
                <p>
                    <label>Author</label>
                    <span class="field">
                        <input type="text" name="author" class="longinput" value="{echo $authUser->getWholeName()}"/>
                    </span>
                </p>
                <p>
                    <label>URL key<small>Automaticaly created from title</small></label>
                    <span class="field">
                        <input type="text" name="urlkey" class="longinput" value="{echo isset($news)? $news->urlKey: ""}" />
                        {if isset($errors["urlKey"])}
                        <label class="error">{echo join("<br/>", $errors["urlKey"])}</label>
                        {/if}
                    </span>
                </p>

                <p>
                    <label>Text*<small>Max. 5000 characters</small></label>
                    <span class="field">
                        <textarea rows="20" name="text" id="ckeditor">{echo isset($news)? $news->body: ""}</textarea>
                        {if isset($errors["text"])}
                        <label class="error">{echo join("<br/>", $errors["text"])}</label>
                        {/if}
                        <br/>
                        <button id="news-clear-text">Clear</button>
                    </span>
                </p>


                <p class="stdformbutton">
                    <input name="submitAddNews" type="submit" value="Save" class="submit radius2" />
                    <input type="reset" class="reset radius2" value="Reset" />
                </p>
            </form>
        </div>
        <br clear="all"/>
    </div>
    
     <div class="one_third last">
        <div class="widgetbox">
            <div class="contenttitle radiusbottom0">
                <h2 class="table"><span>Photos</span></h2>
            </div><!--contenttitle-->
            <div class="news-photos">
                {if ($photos && !empty($photos))}
                    {foreach $photo in $photos}
                        <span class="news-photo">
                            <img src="{echo $photo->getImgMain()}" alt="{echo $photo->getPhotoName()}" width="200px"/>
                            <button class="stdbtn img-to-text" value="{echo $photo->getId()}">To Text</button>
                            <button class="stdbtn img-to-teaser" value="{echo $photo->getId()}">To Teaser</button>
                        </span>
                    {/foreach}
                {/if}
            </div>
            
        </div>
         <br clear="all"/>
    </div>
    <br clear="all"/>
</div>

