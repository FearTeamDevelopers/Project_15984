<ul class="maintabmenu multipletabmenu">
    <li class="current"><a href="#">Produkty</a></li>
    <li><a href="/admin/product/add/">Nový produkty</a></li>
</ul>
<div class="content">
    <div class="contenttitle radiusbottom0">
        <h2 class="form"><span>Produkty</span></h2>
    </div>
    
    <form method="post" class="massActionForm" action="/admin/product/massAction/">
        <input type="hidden" name="tk" id="tk" value="{echo $token}" />
        
        <table cellpadding="0" cellspacing="0" border="0" class="stdtable2">
            <colgroup>
                <col class="con0" /> <col class="con1" />
                <col class="con0" /> <col class="con1" />
                <col class="con0" /> <col class="con1" />
                <col class="con0" /> <col class="con1" />
            </colgroup>
            <thead>
                <tr>
                    <th class="head0 width50"><input type="checkbox" class="checkall" /></th>
                    <th class="head1">Obrázek</th>
                    <th class="head0">Název</th>
                    <th class="head1">Typ</th>
                    <th class="head0">Kategorie</th>
                    <th class="head1">Kód produktu</th>
                    <th class="head0">Současná cena</th>
                    <th class="head1">&nbsp;</th>
                </tr>
            </thead>
            
        </table>
        {if $isAdmin}
        <div class="tableoptions">
            Označené:
            <select class="radius3" name="action">
                <option value="activate">Aktivovat</option>
                <option value="deactivate">Deaktivovat</option>
                <option value="overprice">Přecenit</option>
                <option value="delete">Smazat</option>
            </select> &nbsp;
            
            <span class="overprice-option nodisplay">
                <select name="operation">
                    <option value="+">+</option>
                    <option value="-">-</option>
                </select>
                <input class="microinput" name="price" type="text" title="Pouze čísla" pattern="[\d]*[\.,]?[\d]+" />
            </span>
            <input class="radius3" type="submit" name="performProductAction" value="Execute"/>
        </div><!--tableoptions-->
        {/if}
    </form>
</div>